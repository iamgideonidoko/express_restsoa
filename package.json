{
  "name": "express_restsoa",
  "version": "0.0.1",
  "description": "A domain-driven boilerplate for building robust RESTful APIs with Express, TSOA, TypeScript, Inversify &amp; Drizzle amongst others. It features modular architecture, OpenAPI integration, and automated documentation for efficient API development.",
  "main": "build/index.js",
  "types": "build/index.d.ts",
  "scripts": {
    "dev": "NODE_ENV=development dotenvx run -f .env.development -f .env -- concurrently \"nodemon\" \"tsx watch src/index.ts\"",
    "build": "pnpm generate:tsoa && tsup src/index.ts --out-dir ./build && tsc --declaration",
    "start": "NODE_ENV=production dotenvx run -f .env.production -f .env -- node build/index.js",
    "start:dev": "NODE_ENV=development dotenvx run -f .env.development -f .env -- node build/index.js",
    "lint:base": "eslint --ext .cjs,.mjs,.js,jsx,.ts,.tsx --max-warnings=0 --cache --report-unused-disable-directives --report-unused-disable-directives --resolve-plugins-relative-to=.",
    "lint:check": "pnpm lint:base ./",
    "lint:next": "next lint",
    "lint:staged": "lint-staged",
    "lint": "pnpm lint:base --fix ./",
    "preinstall": "npx only-allow pnpm",
    "commitlint": "commitlint --edit",
    "commit": "cz",
    "prepare": "husky",
    "db:up": "docker compose up --detach db",
    "db:bash": "docker exec -it express_restsoa_db bash",
    "db-dev:up": "docker compose up --detach db-dev",
    "db-dev:bash": "docker exec -it express_restsoa_db_dev bash",
    "studio": "NODE_ENV=development dotenvx run -f .env.development -f .env -- drizzle-kit studio --port 6969 --verbose",
    "generate:spec": "tsoa spec",
    "generate:routes": "tsoa routes",
    "generate:tsoa": "tsoa spec-and-routes",
    "generate:migration": "NODE_ENV=development dotenvx run -f .env.development -f .env -- drizzle-kit generate",
    "migrate": "NODE_ENV=development dotenvx run -f .env.development -f .env -- tsx src/db/migrate.ts",
    "generate-prod:migration": "NODE_ENV=production dotenvx run -f .env.production -f .env -- drizzle-kit generate",
    "migrate-prod": "NODE_ENV=production dotenvx run -f .env.production -f .env -- tsx src/db/migrate.ts"
  },
  "keywords": [],
  "author": "Gideon Idoko (iamgideonidoko@gmail.com)",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/iamgideonidoko/express_restsoa/issues"
  },
  "homepage": "https://github.com/iamgideonidoko/express_restsoa",
  "dependencies": {
    "@dotenvx/dotenvx": "^1.5.0",
    "@tsoa/runtime": "^6.3.0",
    "bcryptjs": "^2.4.3",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.14.1",
    "class-validator-extended": "^4.0.0",
    "cloudinary": "^2.3.0",
    "compression": "^1.7.4",
    "cookie-parser": "^1.4.6",
    "cors": "^2.8.5",
    "deepmerge": "^4.3.1",
    "drizzle-orm": "^0.31.2",
    "envalid": "^8.0.0",
    "express": "^4.19.2",
    "express-rate-limit": "^7.3.1",
    "helmet": "^7.1.0",
    "http-errors": "^2.0.0",
    "inversify": "^6.0.2",
    "inversify-binding-decorators": "^4.0.0",
    "jsonwebtoken": "^9.0.2",
    "morgan": "^1.10.0",
    "ms": "^2.1.3",
    "multer": "1.4.5-lts.1",
    "nanoid": "3.3.4",
    "postgres": "^3.4.4",
    "reflect-metadata": "^0.2.2",
    "swagger-ui-express": "^5.0.1",
    "tsoa": "^6.3.1",
    "utility-types": "^3.11.0",
    "winston": "^3.13.0",
    "xss-clean": "^0.1.4"
  },
  "devDependencies": {
    "@commitlint/cli": "^19.3.0",
    "@commitlint/config-conventional": "^19.2.2",
    "@types/bcryptjs": "^2.4.6",
    "@types/compression": "^1.7.5",
    "@types/cookie-parser": "^1.4.7",
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/http-errors": "^2.0.4",
    "@types/jsonwebtoken": "^9.0.6",
    "@types/morgan": "^1.9.9",
    "@types/ms": "^0.7.34",
    "@types/multer": "^1.4.11",
    "@types/node": "^20.14.9",
    "@types/swagger-ui-express": "^4.1.6",
    "@typescript-eslint/eslint-plugin": "^7.14.1",
    "@typescript-eslint/parser": "^7.14.1",
    "commitizen": "^4.3.0",
    "concurrently": "^8.2.2",
    "cz-conventional-changelog": "^3.3.0",
    "drizzle-kit": "^0.22.8",
    "eslint": "^8.57.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-drizzle": "^0.2.3",
    "eslint-plugin-jest": "^28.6.0",
    "eslint-plugin-no-comments": "^1.1.10",
    "eslint-plugin-prettier": "^5.1.3",
    "husky": "^9.0.11",
    "lint-staged": "^15.2.7",
    "nodemon": "^3.1.4",
    "prettier": "^3.3.2",
    "tsup": "^8.1.0",
    "tsx": "^4.16.0",
    "typescript": "^5.5.2"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": "please-use-pnpm",
    "yarn": "please-use-pnpm",
    "pnpm": ">=8.0.0"
  }
}
